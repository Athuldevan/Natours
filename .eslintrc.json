{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }],
    "no-undef": "error",
    "no-console": "off",
    "node/no-unsupported-features/es-syntax": ["error", {
      "version": ">=22.0.0"
    }]
  },
  "parserOptions": {
    "ecmaVersion": 2022
  }
}
